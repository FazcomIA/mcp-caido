{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "caido:plugin": [
                "./node_modules/@anthropic-ai/sdk/index.d.ts"
            ],
            "caido:utils": [
                "./node_modules/@anthropic-ai/sdk/index.d.ts"
            ]
        }
    },
    "include": [
        "packages/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}